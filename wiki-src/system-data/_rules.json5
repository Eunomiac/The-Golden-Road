  "instantAction": {
    "format": "rules-card",
    "title": "Instant Action",
    "subtitle": "Action Time",
    "blocks": [
      "An instant action is resolved with a single roll. Unless otherwise noted, an instant action only takes a few seconds and takes up your turn in an action scene."
    ],
    "source": {
