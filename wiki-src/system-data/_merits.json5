  "flashback": {
    "key": "flashback",
    "name": "Flashback",
    "tags": ["mental"],
    "prerequisites": "Deviant",
    "value": 1,
    "effect": "{{NAME}} can weaponize invasive memories of {{his}} Divergence. Once per chapter {{he}} may voluntarily take the {{TOOLTIP:Shaken Condition,json.conditions.shaken}} to trigger a vivid flashback about {{his}} transformation, revealing code phrases, diagrams, or overheard exchanges that will prove relevant even if their meaning is not immediately obvious.",
    "source": {
      "book": "DtR",
      "page": 96
    }
  },
  "hypervigilance": {
    "key": "hypervigilance",
    "name": "Hypervigilance",
    "tags": ["mental"],
    "value": 1,
    "effect": "{{NAME}} constantly scans for the curling of fingers, the flash of a barrel, or the shift in a raised voice. Any reflexive {{NAMEVALUE:wit}} + {{NAMEVALUE:com}} roll {{he}} makes to detect an impending ambush, snare, or trap gains the <strong>8-again</strong> quality.",
    "drawback": "If such a detection roll produces an exceptional success, {{NAME}} suffers the {{TOOLTIP:Spooked Condition,json.conditions.spooked}} from recognizing the danger too clearly.",
    "source": {
      "book": "DtR",
      "page": 97
    }
  },
  "interdisciplinarySpecialty": {
    "key": "interdisciplinarySpecialty",
    "name": "Interdisciplinary Specialty - {{DISPLAY:vars.specialty}}",
    "tags": ["mental"],
    "prerequisites": "Skill at ••• or higher with a Specialty",
    "effect": "{{NAME}} may apply the bonus from {{his}} {{DISPLAY:vars.specialty}} Specialty to any Skill in which {{he}} has at least one dot whenever it is justifiable within the fiction.",
    "source": {
      "book": "DtR",
      "page": 97
    }
  },
  "multilingual": {
    "key": "multilingual",
    "name": "Multilingual - {{DISPLAY:vars.lang1}} & {{DISPLAY:vars.lang2}}",
    "tags": ["mental"],
    "value": 1,
    "effect": "{{NAME}} gains conversational fluency in {{DISPLAY:vars.lang1}} and {{DISPLAY:vars.lang2}}. With a {{NAMEVALUE:int}} + {{NAMEVALUE:academics}} roll {{he}} can read enough of either language to grasp context. If {{he}} later purchases the Language Merit for one of these tongues, immediately replace that slot in Multilingual with a new language so the Merit continues to grant two distinct options."
  },
  "professionalTraining": {
    "key": "professionalTraining",
    "name": "Professional Training - {{DISPLAY:vars.profession}}",
    "tags": ["overt", "style"],
    "value": {
      "min": 1,
      "max": 5
    },
    "effect": "{{NAME}} has extensive professional conditioning as a {{DISPLAY:vars.profession}}. {{INLINELIST:vars.assetSkills}} are {{his}} Asset Skills; the benefits below only apply when {{NAME}} is using one of those Asset Skills.",
    "levels": {
      "1": {
        "name": "Networking",
        "effect": "{{NAME}} cultivates colleagues within {{DISPLAY:vars.profession}} circles. Gain two dots of relevant Contacts tied to the Asset Skills defined for this Merit."
      },
      "2": {
        "name": "Continuing Education",
        "effect": "Whenever {{NAME}} rolls one of the Asset Skills tied to this Merit, the test gains the {{TOOLTIP:9-again,json.rules.9again}} quality."
      },
      "3": {
        "name": "Breadth of Knowledge",
        "effect": "{{NAME}} gains a third Asset Skill related to {{DISPLAY:vars.profession}}, then gains two Specialties distributed among those Asset Skills."
      },
      "4": {
        "name": "On the Job Training",
        "effect": "{{NAME}} gains one Skill dot in any Asset Skill tied to this Merit. Whenever {{he}} later purchases a new dot in an Asset Skill from this list, {{he}} takes a Beat."
      },
      "5": {
        "name": "The Routine",
        "effect": "Before rolling an Asset Skill tied to this Merit, {{NAME}} may spend 1 Willpower to treat the roll as a {{TOOLTIP:rote action,json.rules.roteAction}}."
      }
    },
    "source": {
      "book": "DtR",
      "page": 98
    }
  },
  "parkour": {
    "key": "parkour",
    "name": "Parkour",
    "prerequisites": "Dexterity •••, Athletics ••",
    "tags": ["physical", "style"],
    "value": {
      "min": 1,
      "max": 5
    },
    "effect": "{{NAME}} is a trained and experienced free runner. Free running is the art of moving fluidly through urban environments with complex leaps, bounds, running tricks, and vaults. This is the type of sport popularized in modern action films, where characters are unhindered by fences, walls, construction equipment, cars, or anything else the city puts in their way.",
    "levels": {
      "1": {
        "name": "Flow",
        "effect": "{{NAME}} reacts instinctively to any obstacles with leaps, jumps, and scaling techniques. When in a foot chase, subtract <strong>{{VALUE:this.value}}</strong> from the successes needed to pursue or evade.{{BR}}Also, ignore up to <strong>-{{VALUE:this.value}}</strong> from environmental penalties to Athletics rolls."
      },
      "2": {
        "name": "Cat Leap",
        "effect": "{{NAME}} falls with outstanding grace. When using a {{NAMEVALUE:dex}} + {{NAMEVALUE:athletics}} roll to mitigate damage from falling, {{he}} gains one automatic success. Additionally, {{he}} adds <strong>{{VALUE:this.value}}</strong> to the amount of damage removed through this roll.",
        "drawback": "Parkour will not mitigate damage from a terminal-velocity fall."
      },
      "3": {
        "name": "Wall Run",
        "effect": "When climbing, {{NAME}} can run upward for some distance before having to traditionally climb. Without rolling, {{NAME}} scales <strong>{{TOOLTIP:tiny-tooltip,{{CALC:10 + (5 * {{VALUE:athletics}})}} feet,10 + 5 × {{NAMEVALUE:athletics}} = {{CALC:10 + (5 * {{VALUE:athletics}})}}}}</strong> as an {{TOOLTIP:instant action,json.rules.instantAction}}, rather than the normal 10 feet."
      },
      "4": {
        "name": "Expert Traceur",
        "effect": "Parkour has become second nature for {{NAME}}. By spending a Willpower point, {{he}} may designate one Athletics roll to run, jump, or climb as a {{TOOLTIP:rote action,json.rules.roteAction}}.",
        "drawback": "On any turn during which {{NAME}} uses this ability, {{he}} may not apply {{his}} Defense to oncoming attacks."
      },
      "5": {
        "name": "Freeflow",
        "effect": "{{NAME}}'s Parkour is now muscle memory. {{He}} can move without thinking, in a Zenlike state. {{NAME}} must successfully {{TOOLTIP:meditate,json.rules.meditation}} in order to establish Freeflow. Once established, {{he}} is capable of taking Athletics actions {{TOOLTIP:reflexively,json.rules.reflexiveAction}} once per turn.{{BR}}Additionally, by spending a point of Willpower on an Athletics roll in a foot chase, {{he}} gains three <em>successes</em> instead of three dice."
      }
    },
    "source": {
      "book": "DtR",
      "page": 99
    }
  },
