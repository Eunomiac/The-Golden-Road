  "allies": {
    "key": "allies",
    "name": "Allies - {{DISPLAY:vars.subtype}}",
    "tags": ["social", "overt"],
    "value": {
      "min": 1,
      "max": 5
    },
    "effect": "{{NAME}} has one or more allies in {{DISPLAY:vars.subtype}}. When requesting help from Allies, the Storyteller assigns a rating between 1 and 5 to the favor. {{NAME}} can ask for favors that add up to a maximum of {{VALUE:this.value}} per chapter. If {{he}} stretches {{his}} influence beyond that, {{he}} must roll {{NAMEVALUE:man}} + {{NAMEVALUE:persuasion}} + {{NAMEVALUE:this.value}} with a penalty equal to the favor's rating. Whether failed or successful, {{NAME}} loses a dot of Allies (though Sanctity of Merits applies).",
    "drawback": "Most allies won't have {{NAME}}'s back for free. They're going to expect {{him}} to have theirs as well. Allies might call at inconvenient times, demand favors, talk to the wrong people, or put themselves in harm's way.",
    "source": {
      "book": "DtR",
      "page": 100
    }
  },
  "anonymity": {
    "key": "anonymity",
    "name": "Anonymity",
    "tags": ["social"],
    "value": {
      "min": 1,
      "max": 5
    },
    "effect": "{{NAME}} eschews identification. {{He}} avoids any official authoritative influence in {{his}} affairs. Any attempts to find {{him}} by paper trail suffer a <strong>-{{VALUE:this.value}}</strong> penalty.",
    "drawback": "Living off the grid means purchases must be made with cash or falsified credit cards.",
    "source": {
      "book": "DtR",
      "page": 100
    }
  },
