{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./wiki/scripts",
    "rootDir": "./wiki-src/ts",
    "declaration": false,
    "sourceMap": true,
    "removeComments": false,
    "noEmitOnError": true,
    "resolveJsonModule": true
  },
  "include": [
    "wiki-src/ts/**/*",
    "wiki-src/ts/types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "scripts"
  ]
}
